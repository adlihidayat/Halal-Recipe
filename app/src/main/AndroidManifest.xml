<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.HalalRecipe">

        <!-- Set SplashActivity as the launcher activity -->
        <activity
            android:name=".activity.SplashActivity"
            android:label="Halal Recipe"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register LoginActivity -->
        <activity
            android:name=".activity.LoginActivity"
            android:label="Login"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true" />

        <!-- Register other activities here -->
        <activity
            android:name=".activity.RegisterActivity"
            android:label="Register"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".activity.MainActivity"
            android:label="Home"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".activity.NotificationsActivity"
            android:label="Notifications"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".activity.HelpActivity"
            android:label="Help"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".activity.AppinfoActivity"
            android:label="Help"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true" />


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>
