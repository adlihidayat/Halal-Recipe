<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="420dp"
            android:layout_height="180dp"
            android:layout_weight="0"
            android:background="@color/black"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tombolback"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/icon_arrowhite" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_weight="0"
                android:fontFamily="@font/inter_semibold"
                android:text="Notifications"
                android:textColor="@color/white"
                android:textSize="32dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:fontFamily="@font/inter_bold"
            android:text="System Notification"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:text="Recieve notifications about latest news and system update from us" />

        <LinearLayout
            android:layout_width="363dp"
            android:layout_height="232dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_weight="0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="363dp"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="180dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/inter_medium"
                    android:text="Push"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <Switch
                    android:id="@+id/switch_toggle"
                    android:layout_width="64dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="0"
                    android:checked="true"
                    android:thumbTint="@color/white"
                    android:trackTint="@color/green" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="180dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/inter_medium"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <Switch
                    android:id="@+id/switch_toggle1"
                    android:layout_width="64dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="0"
                    android:checked="false"
                    android:thumbTint="@color/white"
                    android:trackTint="@color/green" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="363dp"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="180dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/inter_medium"
                    android:text="SMS"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <Switch
                    android:id="@+id/switch_toggle2"
                    android:layout_width="64dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="0"
                    android:checked="false"
                    android:thumbTint="@color/white"
                    android:trackTint="@color/green" />

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="363dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>