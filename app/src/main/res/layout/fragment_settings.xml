<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Settings">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="420dp"
            android:layout_height="180dp"
            android:layout_weight="0"
            android:background="@color/black"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:src="@drawable/icon_arrowhite"
                android:visibility="invisible"
                tools:visibility="invisible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_weight="0"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_bold"
                android:text="Settings"
                android:textSize="32dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_weight="0"
            android:textSize="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_bold"
            android:text="General" />

        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="280dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="0"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/account_information_button"
                android:layout_width="364dp"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/bottom_border"
                >

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="0"
                        android:src="@drawable/icon_personwhite" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="158dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0"
                        android:fontFamily="@font/inter_medium"
                        android:text="Account Information"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="147dp"
                    android:layout_weight="0"
                    android:src="@drawable/icon_arrowright" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/tombolfavorite"
                android:layout_width="364dp"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:layout_weight="0"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="0"
                        android:src="@drawable/icon_bookmark" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="63dp"
                        android:layout_height="19dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0"
                        android:textColor="@color/black"
                        android:text="Favorite" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="147dp"
                    android:src="@drawable/icon_arrowright" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/linearLayout_notifications"
                android:layout_width="360dp"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:layout_weight="0"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="0"
                        android:src="@drawable/icon_notifputih" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0"
                        android:fontFamily="@font/inter_medium"
                        android:text="Notifications"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="147dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/icon_arrowright" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/linearLayout_help"
                android:layout_width="364dp"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="0"
                        android:src="@drawable/icon_help" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="16dp"
                        android:text="Help"
                        android:textColor="@color/black" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="147dp"
                    android:src="@drawable/icon_arrowright" />

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="364dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/linearLayout_logout"
            android:layout_width="130dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="0"
                android:src="@drawable/icon_logoutmerah" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:fontFamily="@font/inter_medium"
                android:text="Logout"
                android:textColor="@color/red"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>