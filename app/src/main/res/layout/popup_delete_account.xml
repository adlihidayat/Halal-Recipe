<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_popup_background"
    android:paddingTop="20dp"
    android:paddingBottom="5dp"
    android:clipToPadding="false"> <!-- Transparent background -->


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Delete your account?"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="30dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Your account will be permanently removed from the application and your data will be lost"
            android:textSize="14sp"
            android:layout_marginBottom="30dp"
            android:paddingHorizontal="30dp"
            android:textColor="@color/darkGray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#3A3A3A" />
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/red"
            android:background="@android:color/transparent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#3A3A3A" />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white"
            android:background="@android:color/transparent" />
</LinearLayout>
